<div class="topPage">
  <div class="listWrapper">
    <% @lists.each do |list| %>
      <div class="list">
        <div class="list_header">
          <!--<h2 class="list_header_title"><%#= list.title %></h2>-->
          <h2 class="list_header_title"><%= best_in_place list, :title, :class => "bio_input_field", :type => :textarea, :html_attrs => {:wrap => "soft", :maxlength => 50, :cols=> 12}, :url => list_path(list) %></h2>
    
          <div class="list_header_action">
            <%= link_to content_tag(:i, '', class: 'fas fa-trash'), list, method: :delete, title: '確認', data: { confirm: "<i class='fa fa-exclamation-circle'></i> リスト: #{list.title} を削除します。よろしいですか？" } %>
            <%= link_to(content_tag(:i, '', class: 'fas fa-pencil-alt'), edit_list_path(list),  remote: true) %>
          </div>
        </div>
        
        <div class="cardWrapper">
          <% list.cards.each do |card| %>
            <%= link_to list_card_path(list, card), remote: true, class:"cardDetail_link" do %>
              <div class="card">
                <h3 class="card_title"><%= card.title %></h3>
                <% if card.memo.size > 0 %>
                  <div class="card_detail is-exist"><i class="fas fa-bars"></i></div>
                <% end %>
              </div>
            <% end %>
          <% end %>
          
          
          
        </div>
        <div class="addCard">
  
            <!--<i class="far fa-plus-square"></i>-->
            <i class="fas fa-plus"></i>
            <%#= link_to "さらにカードを追加", new_list_card_path(list), class: "addCard_link" %>
            <%= link_to 'さらにカードを追加', new_list_card_path(list), remote: true, class:"addCard_link" %>
          </div>
        
      </div>
    <%end%>
  </div>
</div>